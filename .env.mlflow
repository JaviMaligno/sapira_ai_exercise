# MLflow with Local MinIO Configuration
# Copy this to .env.mlflow for local development

# MinIO Configuration (local S3-compatible storage)
AWS_ACCESS_KEY_ID=minioadmin
AWS_SECRET_ACCESS_KEY=minioadmin123
AWS_DEFAULT_REGION=us-west-2
AWS_ACCOUNT_ID=local

# MLflow MinIO Configuration
MLFLOW_S3_ENDPOINT_URL=http://minio:9000
MLFLOW_S3_IGNORE_TLS=true

# Database Configuration (using PostgreSQL)
POSTGRES_DB=mlflow_db
POSTGRES_USER=mlflow_user
POSTGRES_PASSWORD=mlflow_password

# MLflow Server Configuration
MLFLOW_BACKEND_STORE_URI=postgresql://mlflow_user:mlflow_password@mlflow-db:5432/mlflow_db
MLFLOW_DEFAULT_ARTIFACT_ROOT=s3://fraud-scoring-models/mlflow-artifacts
MLFLOW_TRACKING_URI=http://localhost:5000